pipeline {
    agent any

    tools {
        gradle 'Gradle-8.11.1'
    }

    environment {
        // Define el path relativo al ChromeDriver dentro de tu proyecto
        CHROME_DRIVER = "${WORKSPACE}/chromedriver" // Usa el path relativo dentro de tu repositorio
    }

    stages {
        stage('Verify find ChromeDriver') {
          steps {
            script {
                // Usar find para buscar el chromedriver en el workspace de Jenkins
               sh 'find ${WORKSPACE} -name chromedriver'
              }
            }
        }
        stage('Print Workspace Path') {
          steps {
            script {
              // Imprimir el workspace para verificar que está correcto
              echo "Workspace: ${WORKSPACE}"
            }
          }
        }
        stage('Checkout') {
            steps {
                checkout scm // Clona el código del repositorio
            }
        }

        stage('Build') {
            steps {
                sh 'gradle clean build' // Limpia y construye el proyecto usando Gradle
            }
        }

        stage('Test') {
            steps {
                sh './gradlew test' // Ejecuta las pruebas automatizadas
            }
            post {
                always {
                    junit 'build/test-results/test/*.xml'
                    archiveArtifacts artifacts: 'build/reports/tests/test/**', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Limpia el workspace después del build
        }
    }
}
